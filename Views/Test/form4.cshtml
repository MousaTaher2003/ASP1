<h1>Form 4</h1>
<form method="post">
    <table>
        <tr>
            <td><label>User Name</label></td>
            <td><input type="text" name="uname" value="@ViewBag.uname" required/></td>
        </tr>
        <tr>
            <td><label>Password</label></td>
            <td><input type="password" name="pass" value="@ViewBag.pass" required/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Login"/></td>
        </tr>
        <tr>
            <td><label>Status</label></td>
            <td><input type="text" name="status" value="@ViewBag.status" readonly /></td>
        </tr>
    </table>
</form>